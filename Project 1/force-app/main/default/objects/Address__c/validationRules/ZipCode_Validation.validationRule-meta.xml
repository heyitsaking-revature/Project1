<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>ZipCode_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX( Zip_Code__c ,  &quot;(\\d{5}(-\\d{4})?)?&quot;))</errorConditionFormula>
    <errorDisplayField>Zip_Code__c</errorDisplayField>
    <errorMessage>Enter 5 or 9 digit zipcode (e.g. 12345 or 12345-6789)</errorMessage>
</ValidationRule>
